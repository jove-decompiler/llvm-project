# RUN: llc -O0 -mtriple=tricore -global-isel -run-pass=regbankselect -verify-machineinstrs %s -o - | FileCheck %s

---
name:            test_select_p0
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
  - { id: 2, class: _ }
  - { id: 3, class: _ }
  - { id: 4, class: _ }
body:             |
  bb.0.entry:
    ; CHECK-LABEL: name: test_select_p0
    ; CHECK: [[COPY:%[0-9]+]]:dataregbank(s32) = COPY $d4
    ; CHECK: [[COPY1:%[0-9]+]]:addrregbank(p0) = COPY $a4
    ; CHECK: [[COPY2:%[0-9]+]]:addrregbank(p0) = COPY $a5
    ; CHECK: [[TRUNC:%[0-9]+]]:dataregbank(s1) = G_TRUNC [[COPY]](s32)
    ; CHECK: [[SELECT:%[0-9]+]]:addrregbank(p0) = G_SELECT [[TRUNC]](s1), [[COPY1]], [[COPY2]]
    ; CHECK: $a2 = COPY [[SELECT]]
    %0(s32) = COPY $d4
    %1(p0) = COPY $a4
    %2(p0) = COPY $a5
    %3(s1) = G_TRUNC %0(s32)
    %4(p0) = G_SELECT %3(s1), %1, %2
    $a2 = COPY %4(p0)
...

---
name:            test_select_s32
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
  - { id: 2, class: _ }
  - { id: 3, class: _ }
  - { id: 4, class: _ }
body:             |
  bb.0.entry:
    ; CHECK-LABEL: name: test_select_s32
    ; CHECK: [[COPY:%[0-9]+]]:dataregbank(s32) = COPY $d4
    ; CHECK: [[COPY1:%[0-9]+]]:dataregbank(s32) = COPY $d5
    ; CHECK: [[COPY2:%[0-9]+]]:dataregbank(s32) = COPY $d6
    ; CHECK: [[TRUNC:%[0-9]+]]:dataregbank(s1) = G_TRUNC [[COPY]](s32)
    ; CHECK: [[SELECT:%[0-9]+]]:dataregbank(s32) = G_SELECT [[TRUNC]](s1), [[COPY1]], [[COPY2]]
    ; CHECK: $d2 = COPY [[SELECT]]
    %0(s32) = COPY $d4
    %1(s32) = COPY $d5
    %2(s32) = COPY $d6
    %3(s1) = G_TRUNC %0(s32)
    %4(s32) = G_SELECT %3(s1), %1, %2
    $d2 = COPY %4(s32)
...
