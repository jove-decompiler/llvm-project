# RUN: llc -O0 -mtriple=tricore -global-isel -run-pass=regbankselect -verify-machineinstrs %s -o - | FileCheck %s

---
name:            test_load
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
  - { id: 2, class: _ }
  - { id: 3, class: _ }
  - { id: 4, class: _ }
  - { id: 5, class: _ }
body:             |
  bb.0.entry:
    ; CHECK-LABEL: name: test_load
    ; CHECK: [[PTR:%[0-9]+]]:addrregbank(p0) = COPY $a4
    ; CHECK: [[LOAD_s8:%[0-9]+]]:dataregbank(s32) = G_LOAD [[PTR]](p0) :: (load 1)
    ; CHECK: $d2 = COPY [[LOAD_s8]](s32)
    ; CHECK: [[LOAD_s16:%[0-9]+]]:dataregbank(s32) = G_LOAD [[PTR]](p0) :: (load 2)
    ; CHECK: $d2 = COPY [[LOAD_s16]](s32)
    ; CHECK: [[LOAD_s32:%[0-9]+]]:dataregbank(s32) = G_LOAD [[PTR]](p0) :: (load 4)
    ; CHECK: $d2 = COPY [[LOAD_s32]](s32)
    ; CHECK: [[LOAD_s64:%[0-9]+]]:dataregbank(s64) = G_LOAD [[PTR]](p0) :: (load 8)
    ; CHECK: $e2 = COPY [[LOAD_s64]](s64)
    ; CHECK: [[LOAD_p0:%[0-9]+]]:addrregbank(p0) = G_LOAD [[PTR]](p0) :: (load 4)
    ; CHECK: $a2 = COPY [[LOAD_p0]](p0)
    %0(p0) = COPY $a4
    %1(s32) = G_LOAD %0(p0) :: (load 1)
    $d2 = COPY %1(s32)
    %2(s32) = G_LOAD %0(p0) :: (load 2)
    $d2 = COPY %2(s32)
    %3(s32) = G_LOAD %0(p0) :: (load 4)
    $d2 = COPY %3(s32)
    %4(s64) = G_LOAD %0(p0) :: (load 8)
    $e2 = COPY %4(s64)
    %5(p0) = G_LOAD %0(p0) :: (load 4)
    $a2 = COPY %5(p0)
...

---
name:            test_store
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
  - { id: 2, class: _ }
  - { id: 3, class: _ }
  - { id: 4, class: _ }
body:             |
  bb.0.entry:
    ; CHECK-LABEL: name: test_store
    ; CHECK: [[PTR:%[0-9]+]]:addrregbank(p0) = COPY $a4
    ; CHECK: [[VAL:%[0-9]+]]:dataregbank(s64) = COPY $e4
    ; CHECK: [[TRUNC_s8:%[0-9]+]]:dataregbank(s8) = G_TRUNC [[VAL]](s64)
    ; CHECK: G_STORE [[TRUNC_s8]](s8), [[PTR]](p0) :: (store 1)
    ; CHECK: [[TRUNC_s16:%[0-9]+]]:dataregbank(s16) = G_TRUNC [[VAL]](s64)
    ; CHECK: G_STORE [[TRUNC_s16]](s16), [[PTR]](p0) :: (store 2)
    ; CHECK: [[TRUNC_s32:%[0-9]+]]:dataregbank(s32) = G_TRUNC [[VAL]](s64)
    ; CHECK: G_STORE [[TRUNC_s32]](s32), [[PTR]](p0) :: (store 4)
    ; CHECK: G_STORE [[VAL]](s64), [[PTR]](p0) :: (store 8)
    ; CHECK: G_STORE [[PTR]](p0), [[PTR]](p0) :: (store 4)
    %0(p0) = COPY $a4
    %1(s64) = COPY $e4
    %2(s8) = G_TRUNC %1(s64)
    G_STORE %2(s8), %0(p0) :: (store 1)
    %3(s16) = G_TRUNC %1(s64)
    G_STORE %3(s16), %0(p0) :: (store 2)
    %4(s32) = G_TRUNC %1(s64)
    G_STORE %4(s32), %0(p0) :: (store 4)
    G_STORE %1(s64), %0(p0) :: (store 8)
    G_STORE %0(p0), %0(p0) :: (store 4)
...
