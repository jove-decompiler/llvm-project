# RUN: not --crash llc -mtriple=tricore -run-pass=legalizer -verify-machineinstrs %s -o - 2>&1 | FileCheck %s

---
name:            insert_s80_s8
body:             |
  bb.0:
    liveins: $d4, $e4

    ; CHECK: LLVM ERROR: unable to legalize instruction: %7:_(s96) = G_MERGE_VALUES %18:_(s32), %9:_(s32), %11:_(s32) (in function: insert_s80_s8)
    %0:_(s64) = COPY $e4
    %1:_(s32) = COPY $d4
    %2:_(s80) = G_ANYEXT %0
    %3:_(s8) = G_TRUNC %1
    %4:_(s80) = G_INSERT %2, %3, 64
    %5:_(s64) = G_TRUNC %4
    $e4 = COPY %5
...
