# RUN: llc -O0 -mtriple=tricore -global-isel -run-pass=regbankselect -verify-machineinstrs %s -o - | FileCheck %s

---
name:            test_trunc_s32_s64_dataregbank
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
body: |
  bb.0:
    liveins: $e4
    ; CHECK-LABEL: name: test_trunc_s32_s64_dataregbank
    ; CHECK: [[COPY:%[0-9]+]]:dataregbank(s64) = COPY $e4
    ; CHECK: [[TRUNC:%[0-9]+]]:dataregbank(s32) = G_TRUNC [[COPY]](s64)
    %0(s64) = COPY $e4
    %1(s32) = G_TRUNC %0
...

---
name:            test_trunc_s32_s64_addrregbank
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
body: |
  bb.0:
    liveins: $p4
    ; CHECK-LABEL: name: test_trunc_s32_s64_addrregbank
    ; CHECK: [[COPY:%[0-9]+]]:addrregbank(s64) = COPY $p4
    ; CHECK: [[TRUNC:%[0-9]+]]:addrregbank(s32) = G_TRUNC [[COPY]](s64)
    %0(s64) = COPY $p4
    %1(s32) = G_TRUNC %0
...
