# RUN: llc -O0 -mtriple=tricore -global-isel -run-pass=regbankselect -verify-machineinstrs %s -o - | FileCheck %s

---
name:            test_sextload
legalized:       true
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
  - { id: 2, class: _ }
body:             |
  bb.0.entry:
    ; CHECK-LABEL: name: test_sextload
    ; CHECK: [[PTR:%[0-9]+]]:addrregbank(p0) = COPY $a4
    ; CHECK: [[LOAD:%[0-9]+]]:dataregbank(s32) = G_SEXTLOAD [[PTR]](p0) :: (load 1)
    ; CHECK: $d2 = COPY [[LOAD]](s32)
    ; CHECK: [[LOAD1:%[0-9]+]]:dataregbank(s32) = G_SEXTLOAD [[PTR]](p0) :: (load 2)
    ; CHECK: $d2 = COPY [[LOAD1]](s32)
    %0(p0) = COPY $a4
    %1(s32) = G_SEXTLOAD %0(p0) :: (load 1)
    $d2 = COPY %1(s32)
    %2(s32) = G_SEXTLOAD %0(p0) :: (load 2)
    $d2 = COPY %2(s32)
...
