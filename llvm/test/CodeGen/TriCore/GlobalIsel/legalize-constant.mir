# RUN: llc -O0 -mtriple=tricore -global-isel -run-pass=legalizer -verify-machineinstrs %s -o - | FileCheck %s

--- |
  define void @test_constant() {
  entry:
    ret void
  }
  @var = global i8 0
  define i8* @test_global() {
  entry:
    ret i8* undef
  }
...

---
name:            test_constant
body:             |
  bb.1.entry:
    ; CHECK-LABEL: name: test_constant
    ; CHECK: [[C:%[0-9]+]]:_(s32) = G_CONSTANT i32 0
    ; CHECK: [[COPY:%[0-9]+]]:_(s32) = COPY [[C]](s32)
    ; CHECK: $d2 = COPY [[COPY]](s32)
    ; CHECK: [[C1:%[0-9]+]]:_(s32) = G_CONSTANT i32 42
    ; CHECK: [[COPY1:%[0-9]+]]:_(s32) = COPY [[C1]](s32)
    ; CHECK: $d2 = COPY [[COPY1]](s32)
    ; CHECK: [[C2:%[0-9]+]]:_(s32) = G_CONSTANT i32 -1
    ; CHECK: [[COPY2:%[0-9]+]]:_(s32) = COPY [[C2]](s32)
    ; CHECK: $d2 = COPY [[COPY2]](s32)
    ; CHECK: [[C3:%[0-9]+]]:_(s32) = G_CONSTANT i32 -1
    ; CHECK: $d2 = COPY [[C3]](s32)
    ; CHECK: [[C4:%[0-9]+]]:_(s64) = G_CONSTANT i64 1
    ; CHECK: $e2 = COPY [[C4]](s64)
    ; CHECK: [[C5:%[0-9]+]]:_(p0) = G_CONSTANT i32 0
    ; CHECK: $a2 = COPY [[C5]](p0)
    %0:_(s1) = G_CONSTANT i1 0
    %6:_(s32) = G_ANYEXT %0
    $d2 = COPY %6(s32)
    %1:_(s8) = G_CONSTANT i8 42
    %7:_(s32) = G_ANYEXT %1
    $d2 = COPY %7(s32)
    %2:_(s16) = G_CONSTANT i16 65535
    %8:_(s32) = G_ANYEXT %2
    $d2 = COPY %8(s32)
    %3:_(s32) = G_CONSTANT i32 -1
    $d2 = COPY %3(s32)
    %4:_(s64) = G_CONSTANT i64 1
    $e2 = COPY %4(s64)
    %5:_(p0) = G_CONSTANT i32 0
    $a2 = COPY %5(p0)
...

---
name:            test_global
body:             |
  bb.1.entry:
    ; CHECK-LABEL: name: test_global
    ; CHECK: [[C:%[0-9]+]]:_(p0) = G_GLOBAL_VALUE @var
    ; CHECK: $a2 = COPY [[C]](p0)
    %0:_(p0) = G_GLOBAL_VALUE @var
    $a2 = COPY %0(p0)
...
